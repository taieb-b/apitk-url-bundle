{
    "name": "check24/apitk-url-bundle",
    "license": "MIT",
    "type": "symfony-bundle",
    "description": "This bundle provides filter, sorting and pagination for RESTful API's",
    "authors": [
        {
            "name": "Michael Wolf",
            "email": "wulf1337@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Shopping\\ApiTKUrlBundle\\": "src/"
        }
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/byWulf/apitk-common-bundle.git"
        },
        {
            "type": "vcs",
            "url": "https://github.com/byWulf/apitk-header-bundle.git"
        }
    ],
    "require": {
        "php": "^8.0",
        "symfony/config": "^5.3 || ^6.0",
        "symfony/dependency-injection": "^5.3 || ^6.0",
        "symfony/http-kernel": "^5.3 || ^6.0",
        "symfony/framework-bundle": "^5.3 || ^6.0",
        "doctrine/annotations": "^1.13",
        "nelmio/api-doc-bundle": "^4.8",
        "sensio/framework-extra-bundle": "^5.1 || ^6.0",
        "check24/apitk-common-bundle": "dev-feature/symfony-6 as 4.0.0",
        "check24/apitk-header-bundle": "dev-feature/symfony-6 as 4.0.0"
    },
    "require-dev": {
        "roave/security-advisories": "dev-latest",
        "captainhook/captainhook": "^5.10",
        "captainhook/plugin-composer": "^5.3",
        "doctrine/orm": "^2.10",
        "doctrine/doctrine-bundle": ">=1.8 <3.0",
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpmd/phpmd": "^2.11",
        "phpstan/phpstan": "^1.3",
        "phpstan/phpstan-deprecation-rules": "^1.0.0",
        "pdepend/pdepend": "2.x-dev as 2.11.0"
    },
    "scripts": {
        "test:php-cs-fixer": "@php vendor/bin/php-cs-fixer fix --verbose --dry-run",
        "test:phpstan": "@php vendor/bin/phpstan analyse -c phpstan.neon src",
        "test:phpmd": "@php vendor/bin/phpmd ./src text ruleset.xml --exclude vendor",
        "test": [
            "@test:php-cs-fixer",
            "@test:phpstan",
            "@test:phpmd"
        ],
        "fix:php-cs-fixer": "@php vendor/bin/php-cs-fixer fix --verbose",
        "fix": [
            "@fix:php-cs-fixer"
        ]
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "captainhook/plugin-composer": true
        }
    }
}
